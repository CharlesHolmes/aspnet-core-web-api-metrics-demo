    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <InvariantGlobalization>true</InvariantGlobalization>
    <Trimming>full</Trimming>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="apprunner-cli-input.json" />
  </ItemGroup>

  <ItemGroup>
